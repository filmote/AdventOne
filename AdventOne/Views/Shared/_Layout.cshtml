<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Advent One</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Content/jquery-3.3.1.min.js")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                @Html.ActionLink("Advent One", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" }) |
                @Html.ActionLink("Employees", "Index", "Employee", new { area = "" }, new { @class = "navbar-brand" }) |
                @Html.ActionLink("Customers", "Index", "Customer", new { area = "" }, new { @class = "navbar-brand" }) |
                @Html.ActionLink("Projects", "Index", "Project", new { area = "" }, new { @class = "navbar-brand" }) |
                @Html.ActionLink("Tasks", "Index", "Task", new { area = "" }, new { @class = "navbar-brand" }) |
                @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Advent One Pty Ltd</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>