@model AdventOne.Models.Project

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Customer.CustomerName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.CustomerName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>
</div>

<p>
    @Html.ActionLink(" ", "Edit", "Project", new { id = Model.ID }, new { @class = "fa fa-edit", @style = "text-decoration:none;" })
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID })&nbsp;&nbsp;|&nbsp;&nbsp;
    <a href="@ViewBag.ReturnURL">
        <i class="fa fa-caret-square-o-left"></i>
    </a>
    @Html.ActionLink("Back to previous page", null, null, null, new { href = ViewBag.ReturnURL })

</p>

<br />
<h3>
    @Html.DisplayNameFor(model => model.Tasks)
</h3>
<dd>
    <table class="table" width="100%">
        <tr>
            <th>Description</th>
        </tr>
        @foreach (var task in Model.Tasks) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => task.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Task", new { id = task.ID }, null) |
                    @Html.ActionLink("Details", "Details", "Task", new { id = task.ID }, null) |
                    @Html.ActionLink("Delete", "Delete", "Task", new { id = task.ID }, null)

                </td>
            </tr>
        }
    </table>
    @Html.ActionLink(" ", "Create", "Task", new { projectId = Model.ID }, new { @class = "fa fa-plus-square", @style = "text-decoration:none;" })
    @Html.ActionLink("Create", "Create", "Task", new { projectId = Model.ID }, null)

</dd>

<br />

<h3>
    @Html.DisplayNameFor(model => model.Attachments)
</h3>
<dd>
    <table class="table" width="100%">
        <tr>
            <th>Description</th>
            <th>File Type</th>
            <th></th>
        </tr>
        @foreach (var attachment in Model.Attachments) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => attachment.FileName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => attachment.FileType)
                </td>
                <td>
                    @Html.ActionLink("Download", "Download", "Attachment", new { id = attachment.ID }, null) |
                    @Html.ActionLink("Details", "Details", "Attachment", new { id = attachment.ID }, null) |
                    @Html.ActionLink("Delete", "Delete", "Attachment", new { id = attachment.ID }, null)

                </td>
            </tr>
        }
    </table>
    @Html.ActionLink(" ", "Create", "Attachment", new { projectId = Model.ID }, new { @class = "fa fa-plus-square", @style = "text-decoration:none;" })
    @Html.ActionLink("Create", "Create", "Attachment", new { projectId = Model.ID }, null)
</dd>


